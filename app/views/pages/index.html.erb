        <%= link_to 'Campaña número 1', '#' %>
      </div>
      <div id="title-c-2" class="nivo-html-caption">
        <%= link_to 'Campaña número 2', '#' %>
      </div>
      <div id="title-c-3" class="nivo-html-caption">
        <%= link_to 'Campaña número 3', '#' %>
      </div>
    </div>
    <div id="realtime">
      <p>Hola mundo</p>
    </div><!-- realtime -->
