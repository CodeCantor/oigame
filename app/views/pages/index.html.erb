        <%= link_to image_tag('slide1.png', :title => '#title-c-1'), '#', %>
        <%= link_to image_tag('slide2.png', :title => '#title-c-2'), '#' %>
        <%= link_to image_tag('slide3.png', :title => '#title-c-3'), '#' %>
      </div>
