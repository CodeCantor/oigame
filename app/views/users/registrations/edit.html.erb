<% @page_title = t(:my_account) %>

<div id="accounts-wrapper">
  <div id="accounts">
    <div id="edit-account-form" class="form-stacked">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
        <fieldset>
          <legend>Editar mis datos</legend>
          <div class="form-field">
            <%= f.label t(:email) %>
            <%= f.email_field :email %>
            <% unless resource.errors[:email].blank? %>
              <span class="error_message"><%= resource.errors[:email].to_sentence %></span>
            <% end %>
          </div>
          <div class="form-field">
            <%= f.label t(:name) %>
            <%= f.text_field :name, :placeholder => 'Nombre y apellidos' %>
          </div>
          <div class="form-field">
            <label for="user_CIF / NIF">CIF / NIF</label>
            <%= f.text_field :vat, :placeholder => 'Solo necesario para donaciones' %>
          </div>
          <div class="form-field">
            <%= f.label t(:password) %> <span class="note">(dejala en blanco si no quieres cambiarla)</span>
            <%= f.password_field :password, :style => "display:none;", :name => "fuckautocompleteonfirstpasswd" %>
            <%= f.password_field :password %>
            <% unless resource.errors[:password].blank? %>
              <span class="error_message"><%= resource.errors[:password].to_sentence %></span>
            <% end %>
          </div>
          <div class="form-field">
            <%= f.label t(:password_confirmation) %>
            <%= f.password_field :password_confirmation %>
          </div>
          <div class="form-field">
            <%= f.label t(:current_password) %> <span class="note">(necesitamos tu contraseña actual para realizar los cambios)</span>
            <%= f.password_field :current_password %>
            <% unless resource.errors[:current_password].blank? %>
              <span class="error_message"><%= resource.errors[:current_password].to_sentence %></span>
            <% end %>
          </div>
          <div class="form-actions">
            <%= f.submit t(:update), :class => 'btn primary' %>
          </div>
        </fieldset>
      <% end %>
      <h3>Cancelar mi cuenta</h3>
      <p>¿Deseas cancelar tu cuenta? Puedes hacerlo presionando <%= link_to 'este enlace', registration_path(resource_name), :confirm => '¿Estas seguro?', :method => :delete %>.</p>
    </div><!-- edit-account-form -->
  </div><!-- accounts -->
</div><!-- accounts-wrapper -->

