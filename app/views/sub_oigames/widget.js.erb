var el = document.createElement('iframe'); 
el.setAttribute('id', 'ifrm-sub-oigame-<%= @sub_oigame.id %>');
el.setAttribute('src', '<%= APP_CONFIG[:domain] %>/o/<%= @sub_oigame.slug %>/widget-iframe.html');
el.setAttribute('width', '100%');
el.setAttribute('height', '10px');
el.setAttribute('scrolling', 'no');
el.setAttribute('frameborder', '0');
// para no tener que usar document.write, buscamos este tag de script desde el que nos llaman y nos insertamos
var scripts = document.getElementsByTagName('script');
var script = scripts[scripts.length-1];
script.parentNode.insertBefore(el, script);
// paran no tener que hardcodear un height, ni que nos aparezca el tipico de 200px, lo hacemos dinamico
el.setAttribute('height', el.offsetTop + 'px');
