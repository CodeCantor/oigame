<% @page_title = "#{@sub_oigame.name} SubOigame" %>

<div id="campaigns-wrapper">
  <div id="show-campaign">
    <div id="show-campaign-detail">
      <h1><%= @page_title %></h1>

      <h2>Diseño</h2>

      <% unless @sub_oigame.logo.blank? then %>
        <p>
          <h3>Logo</h3>  
          <pre>
            <%= image_tag @sub_oigame.logo %>
          </pre>
        </p>
      <% end %>

      <p>
        <h3>Header (HTML)</h3>  
        <pre>
          <%= @sub_oigame.html_header %>
        </pre>
      </p>

      <p>
        <h3>Footer (HTML)</h3>
        <pre>
          <%= @sub_oigame.html_footer %>
        </pre>
      </p>

      <p>
        <h3>Estilos (CSS)</h3>
        <pre>
          <%= @sub_oigame.html_style %>
        </pre>
      </p>
    </div><!-- show-campaign-detail -->
    <div id="show-campaign-sidebar" class="grid_8">
      <p><%= link_to 'Editar', edit_sub_oigame_path(@sub_oigame), :class => "btn primary" %></p>
      <p><%= link_to 'Campañas', sub_oigame_campaigns_path(@sub_oigame), :class => "btn success" %></p>
    </div>
  </div>
</div>
