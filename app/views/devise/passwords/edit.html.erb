<% @page_title = "Cambia tu contrase単a" %>

<div id="accounts-wrapper">
  <div id="accounts">
    <div id="edit-account-form" class="form-stacked">
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
        <fieldset>
          <legend><%= @page_title %></legend>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          <div><%= f.label :password, "Nueva contrase単a" %><br />
          <%= f.password_field :password %></div>

          <div><%= f.label :password_confirmation, "Confirmar nueva contrase単a" %><br />
          <%= f.password_field :password_confirmation %></div>

          <div class="form-actions">
            <%= f.submit "Cambiar mi contrase単a", :class => 'btn btn-primary' %>
          </div>
        </fieldset>
      <% end %>

      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>
