<% @page_title = "Integrar campaña de " + @campaign.name %>

<div id="campaigns-wrapper">
  <div id="show-campaign">
    <div id="show-campaign-detail">
      <div id="show-campaign-detail-main">
      <h1><%= @page_title %></h1>
      <hr />
      <h2> <%= t(:option) %> 1</h2>
      <p><%= I18n.t(:integrate_form_explanation_1) %></p><br />
      <pre><code class="html"><%=h "<script type=\"text\/javascript\" src=\"#{APP_CONFIG[:domain]}/campaigns/#{@campaign.slug}/widget.js\"></script>" %></code></pre>
      </div>
      <hr />
      <h2> <%= t(:option) %> 2</h2>
      <p><%= I18n.t(:integrate_form_explanation_2) %></p><br />
