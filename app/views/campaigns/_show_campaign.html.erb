<% if sub_oigame.nil? %> <% url = campaign_path(campaign) %> <% else %> <% url = sub_oigame_campaign_path(sub_oigame, campaign) %> <% end %>
<% if campaign.priority == true %>
  <div class="campaign-info well">
<% else %>
  <div class="campaign-info">
<% end %>
  <div class="cinfo">
    <h3><%= link_to campaign.name, url %></h3>
    <div class="campaign-image span2">
      <% if campaign.image.to_s %>
        <%= link_to image_tag(campaign.image_url(:thumb), :alt => campaign.name), url, :title => campaign.name %>
      <% end %>
    </div><!-- campaign-image -->
    <div class="campaign-text span9">
      <%= campaign.to_html(campaign.intro).html_safe %>
      <div class="campaign-text-links">
      <% if campaign.status == "archived" %>
        <%= link_to url do %>
          <span class="label label-warning" style="font-size: 1em;">archivada</span>
        <% end %>
        <% if campaign.ttype == 'mailing' %>
          <strong><%= campaign.messages.validated.count %></strong> <%= t(:have_already_made) %>
        <% elsif campaign.ttype == 'petition' %>
          <strong><%= campaign.petitions.validated.count %></strong> <%= t(:have_already_made) %>
        <% end %>
      <% else %>
        <%= link_to t(:join_this_campaign), url, :title => campaign.name %>
        <% if campaign.ttype == 'mailing' %>
          <strong><%= campaign.messages.validated.count %></strong>   <%= t(:have_already_made) %>
        <% elsif campaign.ttype == 'petition' %>
          <strong><%= campaign.petitions.validated.count %></strong>  <%= t(:have_already_made) %>
        <% end %>
      <% end %>
      </div><!-- campaign-text-links -->
    </div><!-- campaign-text -->
  </div><!-- cinfo -->
    <div id="list-campaigns-sidebar" class="span1" style="margin-top: -100px;">

      <% if @sub_oigame %>
        <h2 style="font-size: 2em;"><%= link_to t(:propose_campaign), new_sub_oigame_campaign_path(@sub_oigame), :class => "btn btn-primary btn-large" %></h2>
        <br />
        <h2 style="font-size: 2em;"><%= link_to t(:archived_campaigns), archived_sub_oigame_campaigns_path(@sub_oigame), :class => 'btn btn-large btn-success' %></h2> 
        <br />
        <% permitted_to? :moderated, Campaign do %>
          <br />
          <h2 style="font-size: 2em;"><%= link_to t(:moderate_campaigns), moderated_sub_oigame_campaigns_path(@sub_oigame), :class => "btn btn-large btn-danger" %></h2>
        <% end %>
      <% else %>
        <%= link_to(new_campaign_path) do %>
          <i class="icon-off"></i>
        <% end %>
        <%= link_to(archived_campaigns_path) do %>
          <i class="icon-hdd"></i>
        <% end %>
        <%= link_to(campaigns_path) do %>
          <i class="icon-globe"></i>
        <% end %>
        <% permitted_to? :moderated, Campaign do %>
          <%= link_to(moderated_campaigns_path) do %>
            <i class="icon-random"></i>
          <% end %>
        <% end %>
      <% end %>


    </div>
</div><!-- campaign-info -->
