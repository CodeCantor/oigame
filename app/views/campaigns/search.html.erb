<% @page_title = t(:last_campaigns) %>

<div id="campaigns-wrapper">
  <div id="list-campaigns">
    <% if @campaigns.count > 0 %>
      <div id="list-campaigns-info">
        <h2><%= @page_title %></h2>
      <div id="search-div">
        <form class="well form-search" method="get" action="/campaigns/search">
          <input name="q" type="text" style="width: 400px;" class="input-medium search-query" value="<%= params[:q] %>">
          <button type="submit" style="padding: 8px; width: 70px;" class="btn">Buscar</button>
        </form>
      </div>
        <% @campaigns.each do |campaign| %>
          <%= render :partial => "show_campaign", :locals => { :sub_oigame => @sub_oigame, :campaign => campaign } %>
        <% end %>
      </div><!-- list-campaigns-info -->
    <% else %>
      <div id="list-campaigns-info">
        <h2>No se encuentran campa√±as buscando <%= params[:q] %></h2>
      </div>
    <% end %>
  </div><!-- list-campaigns -->
</div><!-- campaigns-wrapper -->
