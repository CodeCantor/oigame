  <body>
    <% flash.each do |name, msg| %>
    <div class="flash-messages">
      <%= content_tag :p, msg, :class => "flash-#{name}" %>
    </div>
    <% end %>
    <div class="navbar" id="header">
      <div class="navbar-inner" id="main-header">
        <div class="container-fluid">
          <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>

          <div class="span2 people">
            <ul class="pull-left">
              <li><%= image_tag("altavozpk.png") %> <label><%= @total_published_campaigns %> <%= t(:campaigns) %></label></li>
              <li><%= image_tag("mensajespk.png") %> <label><%= @total_signs %> <%= t(:firms) %></label></li>
              <li><%= image_tag("pollolevantandolamano.png") %> <label><%= @total_users %> <%= t(:users) %></label></li>
              <li><%= image_tag("world.png") %> <label>2 <%= t(:languages) %></label></li>   
            </ul>
          </div>

          <div class="span4 oigame-name">
            <%= link_to image_tag('oigame.png'), root_path %>
          </div>
          
          <div class="span4 pull-right idioma">
            <div class="navbar-text pull-right">
              <ul class="nav pull-right">              
                <li><%= link_to 'Castellano', url_for(:locale => 'es') %></li>
                <li><%= link_to 'English', url_for(:locale => 'en') %></li>                                       
                <% unless user_signed_in? %>
                  <li><%= link_to t(:create_account), new_user_registration_path %></li>
                  <li id="login-link"><%= link_to t(:login), new_user_session_path, :class => 'navbar-link' %></li>
                <% else %>
                  <li><%= link_to t(:my_account), edit_user_registration_path %></li>
                  <li><%= link_to t(:logout), destroy_user_session_path, :method => :delete %></li>
                <% end %>
                </ul>
              </div>
            </div>

          <!-- Everything you want hidden at 940px or less, place within here -->
          <div class="nav-collapse collapse">
            <!-- .nav, .navbar-search, .navbar-form, etc -->
            <ul class="nav pull-right">
              <li class="active"><%= link_to t(:home), root_path %></li>
              <li><%= link_to t(:about), about_path %></li>
              <li><%= link_to t(:create), new_campaign_path %></li>
              <li><%= link_to t(:campaigns), campaigns_path %></li>
              <li><%= link_to t(:search), search_campaigns_path %></li>
              <li><%= link_to t(:donate), donate_path %></li>
              <li><%= link_to t(:help), help_path %></li>              
              <li><%= link_to t(:contact), contact_path %></li>
            </ul>            
          </div><!-- .nav-collapse -->
        </div><!-- .container-fluid -->
      </div>
      <div class="row pull-right sombra">  
        <%= image_tag("shadow2.png") %> 
      </div>
    </div><!-- .navbar -->

    <%= yield %>

    <div id="footer" class="container-fluid">
      <div class="row-fluid">
        <div class="span3 offset1" id="first_footer_a">
          <ul>
            <li><%= link_to image_tag('rss-icon.png'), feed_campaigns_path %>
            <li><%= link_to image_tag('twitter_icon.png'), 'https://twitter.com/oigame' %>
            <li><%= link_to image_tag('googleplus.png'), 'https://plus.google.com/109609067558669990733/posts' %>
            <li><%= link_to image_tag('facebook_icon.png'), 'https://www.facebook.com/oiga.me' %>
          </ul>
        </div>
        <div class="span4" id="first_footer_b">
          <ul>
            <li><a href="#"><%= image_tag("99pk.png") %></a></li>
            <li><a href="#"><%= image_tag("transparentpk.png") %></a></li>
            <li><a href="#" style="margin-top:-40px;"><%= image_tag("openpk.png") %></a></li>       
          </ul>
        </div>
        <div id="consejo-social" class="span4" style="text-align: right;">
          <%= image_tag('bandera-greenpeace.png') %>
        </div>
      </div>
      <div class="row-fluid" style="text-align: center;">
        <div class="span12" id="footer-nav">
        <ul>
          <li class="active"><%= link_to t(:home), root_path %></li>
          <li><%= link_to t(:about), about_path %></li>
          <li><%= link_to t(:contact), contact_path %></li>
          <li><%= link_to t(:search), '#' %></li>
          <li><%= link_to t(:donate), donate_path %></li>
          <li><%= link_to t(:create), new_campaign_path %></li>
          <li><%= link_to t(:help), help_path %></li>              
        </ul>            
      </div>
      </div>
    </div>

    <% if Rails.env == 'development' || Rails.env == 'staging' %>
      <%# query_review_output %>
      <div id="debug">
        <%= debug(params) %>
      </div>
    <% end %>
  </body>
</html>
